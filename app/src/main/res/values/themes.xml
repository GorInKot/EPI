<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.EPI" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <!--        <item name="colorPrimary">@</item>-->
    </style>

    <style name="Theme.EPI" parent="Base.Theme.EPI">
        <item name="android:textCursorDrawable">@drawable/drawable_cursor</item>
    </style>

    <style name="CursorTheme" parent="">
        <item name="android:textCursorDrawable">@drawable/drawable_cursor</item>
    </style>

    <!-- Стиль для заголовка -->
    <style name="mainLabel">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/color_orange</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginTop">24dp</item>
    </style>

    <!-- Стиль для подзаголовка -->
    <style name="secondLabel">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/color_orange</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_marginStart">25dp</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <!-- Стиль для текста обычного -->

    <!--    Используется в CustomAlertDialog  -->
    <style name="CustomAlertDialogTextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>

        <item name="android:textColorHint">@color/color_black_dark</item>
        <item name="boxBackgroundMode">filled</item>
        <item name="boxBackgroundColor">@color/color_grey</item>
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxStrokeColor">@android:color/transparent</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingStart">16dp</item>

    </style>

    <!--    Используется в TextInputLayout для Регистрации  -->
    <style name="RegistrationTextInputLayout">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>

        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>

        <item name="android:textColorHint">@color/color_black_dark</item>
        <item name="boxBackgroundMode">filled</item>
        <item name="boxBackgroundColor">@color/color_grey</item>
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxStrokeColor">@android:color/transparent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <!-- Стиль для текста в InputTextFieled -->
    <style name="RegistratonText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/color_orange</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>

        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">140dp</item>

        <item name="android:textAllCaps">false</item>

    </style>

    <style name="usualTextViewStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ButtonBack">
        <item name="cornerRadius">32dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/color_black_dark</item>
        <item name="android:backgroundTint">@color/color_orange</item>
        <item name="android:fontFamily">sans-serif-medium</item>

    </style>

    <!-- Стиль для кнопки в главном меню -->
    <style name="MainsButton">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/background</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
        <item name="cornerRadius">32dp</item>
        <item name="backgroundTint">@color/black</item>
    </style>

    <style name="UsualButton">
        <item name="cornerRadius">32dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/background</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Все кнопки -->
    <style name="SimpleButton">
        <item name="cornerRadius">32dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/color_orange</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="elevation">8dp</item>
        <item name="strokeColor">@color/color_orange</item>
        <item name="strokeWidth">2dp</item>
        <item name="backgroundTint">@color/color_black_dark</item>
        <item name="rippleColor">@color/color_orange</item>
        <item name="android:stateListAnimator">@animator/lift_on_touch</item>

        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginBottom">24dp</item>
    </style>

    <!-- Особенные  кнопки -->
    <style name="ExtraButton">
        <item name="cornerRadius">32dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/color_black_dark</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="elevation">8dp</item>
        <item name="strokeColor">@color/color_black_dark</item>
        <item name="strokeWidth">2dp</item>
        <item name="backgroundTint">@color/color_orange</item>
        <item name="rippleColor">@color/color_black_light</item>
        <item name="android:stateListAnimator">@animator/lift_on_touch</item>

        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginBottom">24dp</item>


    </style>

    <!-- Стиль для текста в InputTextFieled -->
    <style name="ArrangementText">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="checkBox">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="buttonTint">@color/color_orange</item>

    </style>

    <style name="TextInputLayout">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginStart">24dp</item>

        <item name="android:textColorHint">@color/color_black_dark</item>
        <item name="boxBackgroundMode">filled</item>
        <item name="boxBackgroundColor">@color/color_grey</item>
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxStrokeColor">@android:color/transparent</item>

        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


</resources>