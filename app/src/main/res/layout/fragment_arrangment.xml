<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.Arrangement.ArrangementFragment"
    android:background="@android:color/darker_gray"
    >

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/ArranFragment_MainLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Общие данные"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/LabelViewStyle"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/AttFr_BackToMainMenu_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="На главное меню"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="25dp"
        style="@style/UnusualButton"
        />

    <LinearLayout
        android:id="@+id/AttFr_LinTop"
        android:layout_width="500dp"
        android:layout_height="60dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ArranFragment_MainLabel"
        >

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/AttrFr_tvDate"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:text="Дата: "
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="normal"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:gravity="center|left"
            />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/AttrFr_tvTime"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="25dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:text="Время: "
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="normal"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:gravity="center|left"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/AttFr_LinMid"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/AttFr_LinTop"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <!-- Левый Блок  -->
        <LinearLayout
            android:id="@+id/AttFr_LinMidLeft"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            >

            <!-- Блок Заказчик -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                >

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/AttFr_tvCustomer"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Заказчик:"
                    android:textSize="22sp"
                    android:textColor="@color/black"
                    android:textAllCaps="false"
                    android:textStyle="normal"
                    android:layout_marginStart="25dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    style="@style/usualTextViewStyle"
                    />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayout_edCustomer"
                    android:layout_width="300dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="15dp"
                    android:background="@color/white"
                    app:boxBackgroundMode="filled"
                    android:layout_gravity="center"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/ed_edCustomer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text=""
                        android:textStyle="normal"
                        android:textColor="@color/black"
                        android:textSize="22sp"
                        android:inputType="textMultiLine"
                        android:singleLine="true"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:hint="Подсказка"
                        />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <!-- Блок Специалист СК -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/AttFr_tvSpecialist"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Специалист СК:"
                    android:textSize="22sp"
                    android:textColor="@color/black"
                    android:textAllCaps="false"
                    android:textStyle="normal"
                    android:layout_marginStart="25dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    style="@style/usualTextViewStyle"
                    />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayout_edSpecialist"
                    android:layout_width="300dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="15dp"
                    android:background="@color/white"
                    app:boxBackgroundMode="filled"
                    android:layout_gravity="center"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/ed_edSpecialist"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text=""
                        android:textStyle="normal"
                        android:textColor="@color/black"
                        android:textSize="22sp"
                        android:inputType="textMultiLine"
                        android:singleLine="true"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:hint="Подсказка"
                        />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <!-- Блок Объект -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/AttFr_tvObject"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Объект:"
                    android:textSize="22sp"
                    android:textColor="@color/black"
                    android:textAllCaps="false"
                    android:textStyle="normal"
                    android:layout_marginStart="25dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    style="@style/usualTextViewStyle"
                    />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayout_edObject"
                    android:layout_width="300dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="15dp"
                    android:background="@color/white"
                    app:boxBackgroundMode="filled"
                    android:layout_gravity="center"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/ed_edObject"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text=""
                        android:textStyle="normal"
                        android:textColor="@color/black"
                        android:textSize="22sp"
                        android:inputType="textMultiLine"
                        android:singleLine="true"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:hint="Подсказка"
                        />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <!-- Блок Участок -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/AttFr_tvPlot"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Участок:"
                    android:textSize="22sp"
                    android:textColor="@color/black"
                    android:textAllCaps="false"
                    android:textStyle="normal"
                    android:layout_marginStart="25dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    style="@style/usualTextViewStyle"
                    />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayout_edPlot"
                    android:layout_width="300dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="15dp"
                    android:background="@color/white"
                    app:boxBackgroundMode="filled"
                    android:layout_gravity="center"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/ed_edPlot"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text=""
                        android:textStyle="normal"
                        android:textColor="@color/black"
                        android:textSize="22sp"
                        android:inputType="textMultiLine"
                        android:singleLine="true"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:hint="Подсказка"
                        />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                >

            </LinearLayout>

            <!-- Панель (нижняя) с кнопками -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginStart="25dp"
                >

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/AttrFr_btnCopy"
                    android:layout_width="0dp"
                    android:layout_height="85dp"
                    android:text="Копия предыдущего отчета"
                    android:layout_weight="1"
                    android:layout_margin="15dp"
                    android:layout_gravity="center"
                    android:backgroundTint="@android:color/black"
                    style="@style/UnusualButton"
                    />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/AttrFr_btnClear"
                    android:layout_width="0dp"
                    android:layout_height="85dp"
                    android:text="Очистить"
                    android:layout_weight="1"
                    android:layout_margin="15dp"
                    android:layout_gravity="center"
                    style="@style/UnusualButton"
                    />
            </LinearLayout>


        </LinearLayout>

        <!-- Правый Блок -->
        <LinearLayout
            android:id="@+id/AttFr_LinMidRight"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                >

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/AttFr_tvGenContractor"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Генподрядчик:"
                    android:textSize="22sp"
                    android:textColor="@color/black"
                    android:textAllCaps="false"
                    android:textStyle="normal"
                    android:layout_marginStart="25dp"
                    android:layout_weight="1"
                    style="@style/usualTextViewStyle"
                    android:layout_gravity="center"
                    android:gravity="center"
                    />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayout_edGenConstractor"
                    android:layout_width="300dp"
                    android:layout_height="45dp"
                    android:layout_marginEnd="50dp"
                    android:background="@color/white"
                    app:boxBackgroundMode="filled"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/ed_edGenConstractor"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text=""
                        android:textStyle="normal"
                        android:textColor="@color/black"
                        android:textSize="22sp"
                        android:inputType="textMultiLine"
                        android:singleLine="true"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:hint="Подсказка"
                        />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                >

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/AttFr_tvRepGenContractor"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Представитель\nГенподрядчика:"
                    android:textSize="22sp"
                    android:textColor="@color/black"
                    android:textAllCaps="false"
                    android:textStyle="normal"
                    android:layout_marginStart="25dp"
                    style="@style/usualTextViewStyle"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayout_edConstractor"
                    android:layout_width="300dp"
                    android:layout_height="45dp"
                    android:layout_marginEnd="50dp"
                    android:background="@color/white"
                    app:boxBackgroundMode="filled"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/ed_edConstractor"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text=""
                        android:textStyle="normal"
                        android:textColor="@color/black"
                        android:textSize="22sp"
                        android:inputType="textMultiLine"
                        android:singleLine="true"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:hint="Подсказка"
                        />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                >

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/AttFr_tvRepSSK_Gp"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Представитель\nССК ПО (ГП):"
                    android:textSize="22sp"
                    android:textColor="@color/black"
                    android:textAllCaps="false"
                    android:textStyle="normal"
                    android:layout_marginStart="25dp"
                    style="@style/usualTextViewStyle"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayout_edRepSSK_Gp"
                    android:layout_width="300dp"
                    android:layout_height="45dp"
                    android:layout_marginEnd="50dp"
                    android:background="@color/white"
                    app:boxBackgroundMode="filled"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/ed_edRepSSK_Gp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text=""
                        android:textStyle="normal"
                        android:textColor="@color/black"
                        android:textSize="22sp"
                        android:inputType="textMultiLine"
                        android:singleLine="true"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:hint="Подсказка"
                        />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                >

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/AttFr_tvSubcontractor"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Субподрядчик:"
                    android:textSize="22sp"
                    android:textColor="@color/black"
                    android:textAllCaps="false"
                    android:textStyle="normal"
                    android:layout_marginStart="25dp"
                    style="@style/usualTextViewStyle"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayout_edSubcontractor"
                    android:layout_width="300dp"
                    android:layout_height="45dp"
                    android:layout_marginEnd="50dp"
                    android:background="@color/white"
                    app:boxBackgroundMode="filled"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/ed_edSubcontractor"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text=""
                        android:textStyle="normal"
                        android:textColor="@color/black"
                        android:textSize="22sp"
                        android:inputType="textMultiLine"
                        android:singleLine="true"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:hint="Подсказка"
                        />
                </com.google.android.material.textfield.TextInputLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                >

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/AttFr_tvRepSubcontractor"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Представитель\nСубподрядчика:"
                    android:textSize="22sp"
                    android:textColor="@color/black"
                    android:textAllCaps="false"
                    android:textStyle="normal"
                    android:layout_marginStart="25dp"
                    style="@style/usualTextViewStyle"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayout_edRepSubcontractor"
                    android:layout_width="300dp"
                    android:layout_height="45dp"
                    android:layout_marginEnd="50dp"
                    android:background="@color/white"
                    app:boxBackgroundMode="filled"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/ed_edRepSubcontractor"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text=""
                        android:textStyle="normal"
                        android:textColor="@color/black"
                        android:textSize="22sp"
                        android:inputType="textMultiLine"
                        android:singleLine="true"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:hint="Подсказка"
                        />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                >

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/AttFr_tvRepSSK_Sub"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Представитель\nССК ПО (суб):"
                    android:textSize="22sp"
                    android:textColor="@color/black"
                    android:textAllCaps="false"
                    android:textStyle="normal"
                    android:layout_marginStart="25dp"
                    style="@style/usualTextViewStyle"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayout_edRepSSK_Sub"
                    android:layout_width="300dp"
                    android:layout_height="45dp"
                    android:layout_marginEnd="50dp"
                    android:background="@color/white"
                    app:boxBackgroundMode="filled"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/ed_edRepSSK_Sub"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text=""
                        android:textStyle="normal"
                        android:textColor="@color/black"
                        android:textSize="22sp"
                        android:inputType="textMultiLine"
                        android:singleLine="true"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:hint="Подсказка"
                        />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/AttrFr_btnNext"
                    android:layout_width="120dp"
                    android:layout_height="80dp"
                    android:text="Далее"
                    android:gravity="center"
                    android:layout_gravity="end"
                    android:layout_marginEnd="25dp"
                    style="@style/UnusualButton"
                    />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>