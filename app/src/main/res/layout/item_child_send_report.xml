<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textView_workType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="workType:"
        style="@style/ArrangementText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="normal"
        android:textSize="22sp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textView_customer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="customer:"
        style="@style/ArrangementText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_workType"
        android:textStyle="normal"
        android:textSize="22sp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textView_contractor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="contractor:"
        style="@style/ArrangementText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_customer"
        android:textStyle="normal"
        android:textSize="22sp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="16dp"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textView_transportCustomer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="transportCustomer:"
        style="@style/ArrangementText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_contractor"
        android:textStyle="normal"
        android:textSize="22sp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="16dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>