<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    >

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_cpv_objectId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="12sp"
        android:autoSizeMaxTextSize="20sp"
        android:autoSizeStepGranularity="2sp"
        style="@style/ArrangementText"
        android:gravity="center"
        android:padding="4dp" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_cpv_ComplexOfWork"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="12sp"
        android:autoSizeMaxTextSize="20sp"
        android:autoSizeStepGranularity="2sp"
        style="@style/ArrangementText"
        android:gravity="center"
        android:padding="4dp" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_cpv_TypeOfWork"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="12sp"
        android:autoSizeMaxTextSize="20sp"
        android:autoSizeStepGranularity="2sp"
        style="@style/ArrangementText"
        android:gravity="center"
        android:padding="4dp" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_cpv_PlanValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="12sp"
        android:autoSizeMaxTextSize="20sp"
        android:autoSizeStepGranularity="2sp"
        style="@style/ArrangementText"
        android:gravity="center"
        android:padding="4dp" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_cpv_Measures"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="12sp"
        android:autoSizeMaxTextSize="20sp"
        android:autoSizeStepGranularity="2sp"
        style="@style/ArrangementText"
        android:gravity="center"
        android:padding="4dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="4dp"
        >

        <Button
            android:id="@+id/btn_cpv_EditRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Редактировать"
            style="@style/SimpleButton"
            android:padding="4dp"
            android:maxLines="1"

            />

        <Button
            android:id="@+id/btn_cpv_DeleteRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Удалить"
            style="@style/SimpleButton"
            android:padding="4dp"
            android:maxLines="1"
            />

    </LinearLayout>
</LinearLayout>