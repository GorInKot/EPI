<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@color/background"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/leftGuideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="160dp"
            />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/rightGuideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="160dp"
            />

        <!-- Заголовок -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvRegisterTitle"
            style="@style/mainLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="Регистрация"
            app:layout_constraintStart_toEndOf="@id/leftGuideline"
            app:layout_constraintEnd_toStartOf="@id/rightGuideline"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp"
            />

        <!-- Фамилия -->
        <TextView
            android:id="@+id/tv_secondName"
            android:text="Фамилия"
            style="@style/RegistratonText"
            app:layout_constraintStart_toEndOf="@id/leftGuideline"
            app:layout_constraintTop_toBottomOf="@id/tvRegisterTitle"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout_secondName"
            android:hint="Введите фамилию"
            style="@style/RegistrationTextInputLayout"
            app:layout_constraintStart_toEndOf="@id/tv_secondName"
            app:layout_constraintEnd_toEndOf="@id/rightGuideline"
            app:layout_constraintTop_toBottomOf="@id/tvRegisterTitle"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputEditText_LastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Имя -->
        <TextView
            android:id="@+id/tv_Name"
            android:text="Имя"
            style="@style/RegistratonText"
            app:layout_constraintStart_toStartOf="@id/leftGuideline"
            app:layout_constraintTop_toBottomOf="@id/tv_secondName"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout_Name"
            android:hint="Введите имя"
            style="@style/RegistrationTextInputLayout"
            app:layout_constraintStart_toEndOf="@id/tv_Name"
            app:layout_constraintEnd_toEndOf="@id/rightGuideline"
            app:layout_constraintTop_toBottomOf="@id/textInputLayout_secondName"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputEditText_FirstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Отчество -->
        <TextView
            android:id="@+id/tv_thirdName"
            android:text="Отчество"
            style="@style/RegistratonText"
            app:layout_constraintStart_toStartOf="@id/leftGuideline"
            app:layout_constraintTop_toBottomOf="@id/tv_Name"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout_thirdName"
            android:hint="Введите отчество"
            style="@style/RegistrationTextInputLayout"
            app:layout_constraintStart_toEndOf="@id/tv_thirdName"
            app:layout_constraintEnd_toStartOf="@id/rightGuideline"
            app:layout_constraintTop_toBottomOf="@id/textInputLayout_Name"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputEditText_thirdName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Табельный номер -->
        <TextView
            android:id="@+id/tv_Number"
            android:text="Табельный номер"
            style="@style/RegistratonText"
            app:layout_constraintStart_toStartOf="@id/leftGuideline"
            app:layout_constraintTop_toBottomOf="@id/tv_thirdName"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout_Number"
            android:hint="Введите номер"
            style="@style/RegistrationTextInputLayout"
            app:layout_constraintStart_toEndOf="@id/tv_Number"
            app:layout_constraintEnd_toStartOf="@id/rightGuideline"
            app:layout_constraintTop_toBottomOf="@id/textInputLayout_thirdName"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputEditText_PersonnelNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Телефон -->
        <TextView
            android:id="@+id/tv_Phone"
            android:text="Телефон"
            style="@style/RegistratonText"
            app:layout_constraintStart_toEndOf="@id/leftGuideline"
            app:layout_constraintTop_toBottomOf="@id/tv_Number"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout_Phone"
            android:hint="+7 (___) ___-__-__"
            style="@style/RegistrationTextInputLayout"
            app:layout_constraintStart_toEndOf="@id/tv_Phone"
            app:layout_constraintEnd_toStartOf="@id/rightGuideline"
            app:layout_constraintTop_toBottomOf="@id/textInputLayout_Number"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputEditText_Phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Филиал -->
        <TextView
            android:id="@+id/tv_Branch"
            android:text="Филиал"
            style="@style/RegistratonText"
            app:layout_constraintStart_toEndOf="@id/leftGuideline"
            app:layout_constraintTop_toBottomOf="@+id/tv_Phone"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout_Branch"
            android:hint="Выберите филиал"
            style="@style/RegistrationTextInputLayout"
            app:layout_constraintStart_toEndOf="@+id/tv_Branch"
            app:layout_constraintTop_toBottomOf="@id/textInputLayout_Phone"
            app:layout_constraintEnd_toStartOf="@id/rightGuideline"
            app:endIconMode="dropdown_menu"
            >

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/autoCompleteTextView_Branch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="none"
                android:importantForAutofill="no"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"

                />
        </com.google.android.material.textfield.TextInputLayout>
        
        <!-- Повтор пароля -->
        <TextView
            android:id="@+id/tv_PU"
            android:text="ПУ"
            style="@style/RegistratonText"
            app:layout_constraintStart_toEndOf="@id/leftGuideline"
            app:layout_constraintTop_toBottomOf="@id/tv_Branch"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout_PU"
            android:hint="Выберите ПУ"
            style="@style/RegistrationTextInputLayout"
            app:layout_constraintStart_toEndOf="@id/tv_PU"
            app:layout_constraintTop_toBottomOf="@id/textInputLayout_Branch"
            app:layout_constraintEnd_toStartOf="@id/rightGuideline"
            app:endIconMode="dropdown_menu"
            >

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/autoCompleteTextView_PU"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="none"
                android:importantForAutofill="no"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"

                />
        </com.google.android.material.textfield.TextInputLayout>
        
        <!-- Кнопка регистрации -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_Register"
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:text="Зарегистрироваться"
            style="@style/MainsButton"
            app:layout_constraintStart_toEndOf="@id/leftGuideline"
            app:layout_constraintEnd_toEndOf="@id/rightGuideline"
            app:layout_constraintTop_toBottomOf="@id/textInputLayout_PU"
            android:layout_marginTop="24dp"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_Auth"
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:text="Авторизоваться"
            style="@style/MainsButton"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toEndOf="@id/leftGuideline"
            app:layout_constraintEnd_toStartOf="@id/rightGuideline"
            app:layout_constraintTop_toBottomOf="@id/btn_Register"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMainMenu"
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:text="Главное меню"
            style="@style/MainsButton"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toEndOf="@id/leftGuideline"
            app:layout_constraintEnd_toStartOf="@id/rightGuideline"
            app:layout_constraintTop_toBottomOf="@id/btn_Auth"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
