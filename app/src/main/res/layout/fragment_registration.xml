<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@color/background"
    >

    <LinearLayout
        android:layout_width="750dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        >

        <!-- Заголовок -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvRegisterTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Регистрация"
            android:layout_marginBottom="24dp"
            style="@style/mainLabel"
            />

        <!-- Фамилия -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"

            >

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Фамилия"
                android:textSize="18sp"
                style="@style/ArrangementText"
                android:layout_marginTop="0dp"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Введите фамилию"

                style="@style/TextInputLayout"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etLastName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"

                    />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <!-- Имя -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            >

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Имя"
                android:textSize="18sp"
                style="@style/ArrangementText"
                android:layout_marginTop="0dp"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Введите имя"
                style="@style/TextInputLayout"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etFirstName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <!-- Отчество -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            >

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Отчество"
                android:textSize="18sp"
                style="@style/ArrangementText"
                android:layout_marginTop="0dp"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Введите отчество"
                style="@style/TextInputLayout"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etMiddleName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <!-- Табельный номер -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            >

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Табельный номер"
                android:textSize="18sp"
                style="@style/ArrangementText"
                android:layout_marginTop="0dp"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Введите номер"
                style="@style/TextInputLayout"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etPersonnelNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <!-- Телефон -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            >

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Телефон"
                android:textSize="18sp"
                style="@style/ArrangementText"
                android:layout_marginTop="0dp"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="+7 (___) ___-__-__"
                style="@style/TextInputLayout"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <!-- Локация -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            >

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Филиал"
                android:textSize="18sp"
                style="@style/ArrangementText"
                android:layout_marginTop="0dp"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Выберите филиал"
                style="@style/TextInputLayout"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <!-- Повтор пароля -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp"
            android:gravity="center_vertical"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            >

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="ПУ"
                android:textSize="18sp"
                style="@style/ArrangementText"
                android:layout_marginTop="0dp"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Выберите ПУ"
                style="@style/TextInputLayout"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etPU"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <!-- Кнопка регистрации -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRegister"
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:text="Зарегистрироваться"
            style="@style/MainsButton"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAuth"
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:text="Авторизоваться"
            style="@style/MainsButton"
            android:layout_marginTop="8dp"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMainMenu"
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:text="Главное меню"
            style="@style/MainsButton"
            android:layout_marginTop="8dp"
            />

    </LinearLayout>
</ScrollView>
