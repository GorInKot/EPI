<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.Reports.ReportsFragment"
    android:background="@color/background"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Список отчетов\nСкоро здесь будут отображаться отчеты..."
        style="@style/ArrangementText"
        android:layout_gravity="center"
        android:gravity="center"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/RepFr_MainMenu_btn"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Главное меню"
        android:textSize="20sp"
        android:layout_marginEnd="25dp"
        android:layout_gravity="center"
        style="@style/UsualButton"
        app:cornerRadius="36dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="25dp"
        android:layout_marginStart="25dp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>