<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_one"
    >


    <TextView
        android:id="@+id/startFragment_MainLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Основное меню"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center|top"
        android:layout_marginTop="60dp"
        android:textColor="@color/black"
        android:textAllCaps="false"
        />

    <TextView
        android:id="@+id/startFragment_SecondLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ежедневная отчетность"
        android:textSize="36sp"
        android:textStyle="normal"
        app:layout_constraintTop_toBottomOf="@id/startFragment_MainLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center|top"
        android:textColor="@color/black"
        android:textAllCaps="false"
        android:layout_marginTop="15dp"
        />

    <Button
        android:id="@+id/startFragment_btnRasstanovka"
        android:layout_width="400dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/startFragment_SecondLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"
        android:text="Расстоновка"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textStyle="normal"/>

    <Button
        android:id="@+id/startFragment_btnControl"
        android:layout_width="400dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/startFragment_btnRasstanovka"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"
        android:text="Инспекционный контроль"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textStyle="normal"/>

    <Button
        android:id="@+id/startFragment_btnFicsacia"
        android:layout_width="400dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/startFragment_btnControl"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"
        android:text="Фиксация объемов"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textStyle="normal"/>



</androidx.constraintlayout.widget.ConstraintLayout>