<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_one"
    >


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/startFragment_MainLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Основное меню"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center|top"
        style="@style/LabelViewStyle"

        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/startFragment_SecondLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ежедневная отчетность"
        app:layout_constraintTop_toBottomOf="@id/startFragment_MainLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center|top"
        android:layout_marginTop="15dp"
        style="@style/SecondViewStyle"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/startFragment_btnRasstanovka"
        android:layout_width="250dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/startFragment_SecondLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="45dp"
        android:text="Расстановка"
        style="@style/UnusualButton"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/startFragment_btnControl"
        android:layout_width="250dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/startFragment_btnRasstanovka"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"
        android:text="Инспекционный контроль"
        style="@style/UnusualButton"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/startFragment_btnFicsacia"
        android:layout_width="250dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/startFragment_btnControl"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"
        android:text="Фиксация объемов"
        style="@style/UnusualButton"
        />



</androidx.constraintlayout.widget.ConstraintLayout>