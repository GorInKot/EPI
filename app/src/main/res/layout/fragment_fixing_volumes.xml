<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.FixingVolumes.FixingVolumesFragment"
    android:scrollbars="vertical"
    android:background="@color/color_black"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="36dp"
        >

        <!-- Направляющая левая -->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="16dp"
            />

        <!-- Направляющая центральная -->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_middle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5"
            />

        <!-- Направляющая правая -->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="16dp"
            />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_mainLabel"
            android:text="Фиксация объемов"
            style="@style/mainLabel"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toEndOf="@id/guideline_start"
            app:layout_constraintTop_toTopOf="parent"
            android:maxLines="1"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_AddPlanValues"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Добавить Плановые значения"
            style="@style/SimpleButton"
            app:layout_constraintEnd_toStartOf="@id/guideline_end"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_Plan"
            android:layout_marginTop="8dp"

            />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_secondLabel"
            android:text="Отчётность"
            style="@style/secondLabel"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toEndOf="@id/guideline_start"
            app:layout_constraintTop_toBottomOf="@id/tv_mainLabel"
            android:maxLines="1"
            />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_fixComplexOfWork"
            android:text="Комплекс работ"
            style="@style/ArrangementText"
            app:layout_constraintStart_toEndOf="@id/guideline_start"
            app:layout_constraintTop_toBottomOf="@id/tv_secondLabel"
            app:layout_constraintEnd_toStartOf="@id/guideline_middle"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txtInpLay_fixComplexOfWork"
            app:layout_constraintStart_toEndOf="@id/guideline_start"
            app:layout_constraintTop_toBottomOf="@id/tv_fixComplexOfWork"
            app:layout_constraintEnd_toStartOf="@id/guideline_middle"
            android:layout_margin="16dp"
            android:gravity="center"
            android:layout_gravity="center"
            style="@style/TextInputLayout"
            app:endIconMode="dropdown_menu"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            >
            <AutoCompleteTextView
                android:id="@+id/AutoCompleteTextView_fixComplexOfWork"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:minHeight="56dp"
                android:textSize="14sp"
                android:inputType="text"
                android:importantForAccessibility="yes"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:textColor="@color/color_black"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_fixTypeOfWork"
            android:text="Вид работ"
            style="@style/ArrangementText"
            app:layout_constraintStart_toEndOf="@id/guideline_start"
            app:layout_constraintTop_toBottomOf="@id/txtInpLay_fixComplexOfWork"
            app:layout_constraintEnd_toStartOf="@id/guideline_middle"
            android:layout_marginTop="24dp"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txtInpLay_fixTypeOfWork"
            app:layout_constraintStart_toEndOf="@id/guideline_start"
            app:layout_constraintEnd_toStartOf="@id/guideline_middle"
            app:layout_constraintTop_toBottomOf="@id/tv_fixTypeOfWork"
            android:layout_margin="16dp"
            android:gravity="center"
            android:layout_gravity="center"
            style="@style/TextInputLayout"
            app:endIconMode="dropdown_menu"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            >
            <AutoCompleteTextView
                android:id="@+id/AutoCompleteTextView_fixTypeOfWork"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:minHeight="56dp"
                android:textSize="14sp"
                android:inputType="text"
                android:importantForAccessibility="yes"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:textColor="@color/color_black"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_MeasureUnits"
            android:text="Единицы\nизмерения"
            style="@style/ArrangementText"
            app:layout_constraintStart_toEndOf="@id/guideline_middle"
            app:layout_constraintTop_toBottomOf="@id/tv_secondLabel"
            app:layout_constraintEnd_toStartOf="@id/tv_Plan"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txtInpLay_MeasureUnits"
            app:layout_constraintStart_toEndOf="@id/guideline_middle"
            app:layout_constraintEnd_toStartOf="@id/txtInpLay_Plan"
            app:layout_constraintTop_toBottomOf="@id/tv_MeasureUnits"
            android:layout_margin="16dp"
            android:gravity="center"
            android:layout_gravity="center"
            style="@style/TextInputLayout"
            app:endIconMode="dropdown_menu"
            >
            <AutoCompleteTextView
                android:id="@+id/AutoCompleteTextView_MeasureUnits"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:minHeight="56dp"
                android:textSize="14sp"
                android:inputType="text"
                android:importantForAccessibility="yes"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:textColor="@color/color_black"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_Plan"
            android:text="План"
            style="@style/ArrangementText"
            app:layout_constraintStart_toEndOf="@id/tv_MeasureUnits"
            app:layout_constraintEnd_toStartOf="@id/guideline_end"
            app:layout_constraintTop_toBottomOf="@id/tv_secondLabel"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txtInpLay_Plan"
            app:layout_constraintTop_toBottomOf="@id/tv_Plan"
            app:layout_constraintStart_toEndOf="@id/txtInpLay_MeasureUnits"
            app:layout_constraintEnd_toStartOf="@id/guideline_end"
            android:layout_margin="16dp"
            android:gravity="center"
            android:layout_gravity="center"
            style="@style/TextInputLayout"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/TextInputEditText_Plan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:minHeight="56dp"
                android:textSize="14sp"
                android:inputType="text"
                android:importantForAccessibility="yes"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:textColor="@color/color_black"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_Fact"
            android:text="Факт"
            style="@style/ArrangementText"
            app:layout_constraintStart_toEndOf="@id/guideline_middle"
            app:layout_constraintTop_toBottomOf="@id/txtInpLay_MeasureUnits"
            app:layout_constraintEnd_toEndOf="@id/tv_MeasureUnits"
            android:layout_marginTop="24dp"

            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txtInpLay_Fact"
            app:layout_constraintStart_toEndOf="@id/guideline_middle"
            app:layout_constraintTop_toBottomOf="@id/tv_Fact"
            app:layout_constraintEnd_toEndOf="@id/tv_Fact"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="0dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:layout_gravity="center"
            style="@style/TextInputLayout"

            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/TextInputEditText_Fact"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:minHeight="56dp"
                android:textSize="14sp"
                android:inputType="text"
                android:importantForAccessibility="yes"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:textColor="@color/color_black"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_Add"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Добавить запись"
            style="@style/SimpleButton"
            app:layout_constraintEnd_toStartOf="@id/guideline_end"
            app:layout_constraintTop_toBottomOf="@id/tv_Fact"
            android:layout_marginTop="16dp"

            />

        <!-- Заголовок таблицы -->

        <LinearLayout
            android:id="@+id/tableHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toEndOf="@id/guideline_start"
            app:layout_constraintEnd_toStartOf="@id/guideline_end"
            app:layout_constraintTop_toBottomOf="@id/txtInpLay_fixTypeOfWork"
            android:layout_marginTop="16dp"
            style="@style/TableHeader"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:text="Объект"
                android:textStyle="bold"
                android:gravity="center"
                style="@style/ArrangementText"
                android:textSize="16dp"
                android:padding="4dp"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="14sp"
                android:autoSizeMaxTextSize="22sp"
                android:autoSizeStepGranularity="2sp"
                android:maxLines="2"
                android:layout_marginStart="10dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="4dp"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Комплекс работ\nиз проекта"
                android:textStyle="bold"
                android:gravity="center"
                style="@style/ArrangementText"
                android:textSize="16dp"
                android:padding="4dp"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="14sp"
                android:autoSizeMaxTextSize="22sp"
                android:autoSizeStepGranularity="2sp"
                android:maxLines="2"
                android:layout_marginStart="10dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="4dp"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Вид работ\nиз проекта"
                android:textStyle="bold"
                android:gravity="center"
                style="@style/ArrangementText"
                android:textSize="16dp"
                android:padding="4dp"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="14sp"
                android:autoSizeMaxTextSize="22sp"
                android:autoSizeStepGranularity="2sp"
                android:maxLines="2"
                android:layout_marginStart="10dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="4dp"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Единицы\nизмерения"
                android:textStyle="bold"
                android:gravity="center"
                style="@style/ArrangementText"
                android:textSize="16dp"
                android:padding="4dp"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="14sp"
                android:autoSizeMaxTextSize="22sp"
                android:autoSizeStepGranularity="2sp"
                android:maxLines="2"
                android:layout_marginStart="10dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="4dp"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Объем работ\nпо проекту"
                android:textStyle="bold"
                android:gravity="center"
                style="@style/ArrangementText"
                android:textSize="16dp"
                android:padding="4dp"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="14sp"
                android:autoSizeMaxTextSize="22sp"
                android:autoSizeStepGranularity="2sp"
                android:maxLines="2"
                android:layout_marginStart="10dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="4dp"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Выполненный\nобъем работ"
                android:textStyle="bold"
                android:gravity="center"
                style="@style/ArrangementText"
                android:textSize="16dp"
                android:padding="4dp"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="14sp"
                android:autoSizeMaxTextSize="22sp"
                android:autoSizeStepGranularity="2sp"
                android:maxLines="2"
                android:layout_marginStart="10dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="4dp"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Остаток\nпо объему"
                android:textStyle="bold"
                android:gravity="center"
                style="@style/ArrangementText"
                android:textSize="16dp"
                android:padding="4dp"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="14sp"
                android:autoSizeMaxTextSize="22sp"
                android:autoSizeStepGranularity="2sp"
                android:maxLines="2"
                android:layout_marginStart="10dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="4dp"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:text="Действия"
                android:textStyle="bold"
                android:gravity="center"
                style="@style/ArrangementText"
                android:textSize="16dp"
                android:padding="4dp"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="14sp"
                android:autoSizeMaxTextSize="22sp"
                android:autoSizeStepGranularity="2sp"
                android:maxLines="2"
                android:layout_marginStart="10dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="4dp"
                />
        </LinearLayout>


        <!-- RecyclerView для строк -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewFixVolumes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/color_grey_dark"
            android:nestedScrollingEnabled="false"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toStartOf="@id/guideline_end"
            app:layout_constraintStart_toEndOf="@id/guideline_start"
            app:layout_constraintTop_toBottomOf="@id/tableHeader"
            android:layout_marginTop="0dp"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_Back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="56dp"
            android:maxHeight="70dp"
            android:text="Назад"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintTop_toBottomOf="@id/recyclerViewFixVolumes"
            app:layout_constraintEnd_toStartOf="@id/btn_Next"
            style="@style/SimpleButton"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_Next"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="56dp"
            android:maxHeight="70dp"
            android:text="Сохранить"
            style="@style/ExtraButton"
            app:layout_constraintTop_toBottomOf="@id/recyclerViewFixVolumes"
            app:layout_constraintEnd_toStartOf="@id/guideline_end"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>