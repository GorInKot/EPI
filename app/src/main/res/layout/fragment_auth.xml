<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_black"
    android:scrollbars="vertical"
    android:fillViewport="true"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="36dp"
        >
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.3" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.7"
            />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.2"
            />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvAuthTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/authorization"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="0dp"
            style="@style/mainLabel"
            android:gravity="center_horizontal"
            app:layout_constraintStart_toEndOf="@id/guideline_left"
            app:layout_constraintEnd_toStartOf="@id/guideline_right"
            app:layout_constraintBottom_toBottomOf="@id/guideline_top"
            />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout_Number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/unique_number"
            style="@style/TextInputLayout"
            app:layout_constraintStart_toEndOf="@id/guideline_left"
            app:layout_constraintEnd_toEndOf="@id/guideline_right"
            app:layout_constraintTop_toBottomOf="@id/tvAuthTitle"
            android:layout_marginTop="30dp"
            android:gravity="center"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputEditText_Number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="56dp"
                android:textSize="14sp"
                android:inputType="number"
                android:importantForAccessibility="yes"
                android:gravity="center_vertical"
                android:maxLength="4"
                android:padding="10dp"
                android:autofillHints="username"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout_Password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/enter_password"
            style="@style/TextInputLayout"
            app:passwordToggleEnabled="true"
            app:layout_constraintStart_toEndOf="@id/guideline_left"
            app:layout_constraintTop_toBottomOf="@id/textInputLayout_Number"
            app:layout_constraintEnd_toEndOf="@id/guideline_right"
            android:layout_marginTop="30dp"
            android:gravity="center"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputEditText_Password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="56dp"
                android:textSize="14sp"
                android:inputType="textPassword"
                android:importantForAccessibility="yes"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:autofillHints="password"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout_workType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/select_work_mode"
            style="@style/TextInputLayout"
            app:layout_constraintStart_toEndOf="@id/guideline_left"
            app:layout_constraintTop_toBottomOf="@id/textInputLayout_Password"
            app:layout_constraintEnd_toEndOf="@id/guideline_right"
            android:layout_marginTop="30dp"
            android:gravity="center"
            app:endIconMode="dropdown_menu"
            >

            <!--
            Добавим отключение клавиатуры при выборе элемента
            из выпадающего списка через атрибут
            android:focusable="false"
            -->
            <AutoCompleteTextView
                android:id="@+id/autoComplete_WorkType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="56dp"
                android:textSize="14sp"
                android:inputType="none"
                android:importantForAccessibility="yes"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:focusable="false"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Кнопка входа -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_Login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:maxHeight="66dp"
            android:text="@string/login"
            style="@style/SimpleButton"
            app:layout_constraintStart_toEndOf="@id/guideline_left"
            app:layout_constraintEnd_toEndOf="@id/guideline_right"
            app:layout_constraintTop_toBottomOf="@id/textInputLayout_workType"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginTop="34dp"
            />

        <!-- Кнопка на регистрацию -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_Register"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/register"
            style="@style/ArrangementText"
            android:layout_marginTop="24dp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            app:layout_constraintStart_toEndOf="@id/guideline_left"
            app:layout_constraintEnd_toEndOf="@id/guideline_right"
            app:layout_constraintTop_toBottomOf="@id/btn_Login"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
