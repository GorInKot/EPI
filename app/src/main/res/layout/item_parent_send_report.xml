<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="900dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dp"
    android:backgroundTint="@color/color_grey_dark"
    android:layout_marginStart="24dp"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        >

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textView_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Дата:"
            style="@style/ArrangementText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="124dp"
            android:layout_marginTop="16dp"
            android:maxLines="1"
            />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textView_object"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Объект:"
            style="@style/ArrangementText"
            app:layout_constraintStart_toEndOf="@id/textView_date"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="124dp"
            android:layout_marginTop="16dp"
            android:maxLines="1"
            />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textView_isSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Отправлено"
            style="@style/ArrangementText"
            app:layout_constraintStart_toEndOf="@id/textView_object"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="124dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="16dp"
            android:maxLines="1"
            />

        <ImageView
            android:id="@+id/imageView_isSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_calendar_month_24"
            app:layout_constraintStart_toEndOf="@id/textView_isSend"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="124dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="8dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>