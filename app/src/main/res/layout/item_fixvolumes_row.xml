<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="?android:background"
    >

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvIdObject"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="14sp"
            android:autoSizeMaxTextSize="22sp"
            android:autoSizeStepGranularity="2sp"
            style="@style/ArrangementText"
            android:gravity="center"
            android:padding="4dp"
            />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvProjectWorkType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="14sp"
            android:autoSizeMaxTextSize="22sp"
            android:autoSizeStepGranularity="2sp"
            style="@style/ArrangementText"
            android:gravity="center"
            android:padding="4dp"
            />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvMeasure"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="14sp"
            android:autoSizeMaxTextSize="22sp"
            android:autoSizeStepGranularity="2sp"
            style="@style/ArrangementText"
            android:gravity="center"
            android:padding="4dp"
            />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvPlan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="14sp"
            android:autoSizeMaxTextSize="22sp"
            android:autoSizeStepGranularity="2sp"
            style="@style/ArrangementText"
            android:gravity="center"
            android:padding="4dp"
            />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvFact"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="14sp"
            android:autoSizeMaxTextSize="22sp"
            android:autoSizeStepGranularity="2sp"
            style="@style/ArrangementText"
            android:gravity="center"
            android:padding="4dp"
            />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvResult"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="14sp"
            android:autoSizeMaxTextSize="22sp"
            android:autoSizeStepGranularity="2sp"
            style="@style/ArrangementText"
            android:gravity="center"
            android:padding="4dp"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <ImageButton
                android:id="@+id/btnEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/edit_24"
                android:background="@android:color/transparent"
                android:padding="4dp"
                android:layout_marginEnd="32dp"
                android:contentDescription="Edit row"
                />

            <ImageButton
                android:id="@+id/btnDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/delete_24"
                android:background="@android:color/transparent"
                android:padding="4dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:contentDescription="Delete row"
                />
        </LinearLayout>
</LinearLayout>