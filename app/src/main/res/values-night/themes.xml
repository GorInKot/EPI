    <style name="CustomAlertDialogTextView">
        <item name="android:textColor">@color/color_grey</item> <!-- #E5E5E5 -->
        <item name="android:textColorHint">@color/color_grey</item> <!-- #E7090808, нечитаем -->
        <item name="boxBackgroundMode">filled</item>
        <item name="boxBackgroundColor">@color/color_black_dark</item> <!-- #E5E5E5 -->
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxStrokeColor">@android:color/transparent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ArrangementText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/color_grey</item> <!-- #E5E5E5 -->
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:ellipsize">end</item>
        <item name="maxLines">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:autoSizeMinTextSize">14sp</item>
        <item name="android:autoSizeMaxTextSize">20sp</item>
        <item name="android:autoSizeStepGranularity">2sp</item>
    </style>

    <style name="ExtraButton">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/color_black_dark</item> <!-- #E7090808, нечитаем -->
        <item name="android:backgroundTint">@color/color_orange</item> <!-- #FCA311 -->
        <item name="strokeColor">@color/color_black_dark</item> <!-- #E7090808 -->
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:autoSizeMinTextSize">14sp</item>
        <item name="android:autoSizeMaxTextSize">20sp</item>
        <item name="android:autoSizeStepGranularity">2sp</item>
        <item name="rippleColor">@color/color_grey_dark</item>
        <item name="elevation">4dp</item>
    </style>

    <style name="SimpleButton">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/color_grey</item>
        <item name="android:backgroundTint">?android:background</item>
        <item name="strokeColor">@color/color_grey</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:autoSizeMinTextSize">14sp</item>
        <item name="android:autoSizeMaxTextSize">20sp</item>
        <item name="android:autoSizeStepGranularity">2sp</item>
        <item name="rippleColor">@color/color_grey_dark</item> <!-- #6A6A6A -->
        <item name="elevation">4dp</item>
    </style>

    <style name="TextInputLayout">
        <item name="android:textColor">?android:background</item>  <!-- цвет текста -->
        <item name="android:textColorHint">@color/color_one</item> <!-- цвет подсказки -->
        <item name="boxBackgroundMode">filled</item>
        <item name="boxBackgroundColor">@color/color_grey</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxStrokeColor">@android:color/transparent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">56dp</item>
    </style>

    <style name="checkBox">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/color_grey</item> <!-- #E5E5E5 -->
        <item name="buttonTint">@color/color_orange</item> <!-- #FCA311 -->
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Стиль для кнопки в главном меню -->
    <style name="MainsButton">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/color_orange</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
        <item name="cornerRadius">32dp</item>
        <item name="backgroundTint">?android:background</item>
        <item name="strokeColor">@color/color_orange</item>
        <item name="strokeWidth">5dp</item>
        <item name="rippleColor">@color/color_grey</item>
    </style>

    <style name="TableHeader">
        <item name="backgroundTint">@color/neutral_grey</item>
        <item name="background">@color/neutral_grey</item>
        <item name="android:background">@color/neutral_grey</item>
        <item name="android:backgroundTint">@color/neutral_grey</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginEnd">0dp</item>
        <item name="android:layout_marginTop">24dp</item>
    </style>

    <style name="Rv">
        <item name="backgroundTint">@color/neutral_grey</item>
        <item name="background">@color/neutral_grey</item>
        <item name="android:background">@color/neutral_grey</item>
        <item name="android:backgroundTint">@color/neutral_grey</item>
    </style>

    <!-- Базовая тема для пикеров, адаптированная под темную тему -->
    <style name="CustomPickerTheme" parent="Base.Theme.EPI">
        <!-- Фон пикера -->
        <item name="android:background">@color/color_black_light</item>
        <!-- Цвет текста -->
        <item name="android:textColor">@color/color_grey</item>
        <!-- Шрифт -->
        <item name="android:fontFamily">sans-serif-medium</item>
        <!-- Размер текста -->
        <item name="android:textSize">16sp</item>
        <!-- Стили для календаря и времени -->
        <item name="materialCalendarStyle">@style/CustomMaterialCalendar</item>
        <item name="android:timePickerStyle">@style/CustomTimePicker</item>
        <!-- Стиль для кнопок -->
        <item name="materialButtonStyle">@style/PickerButton</item>
        <!-- Цвет выбранных элементов -->
        <item name="colorPrimary">@color/color_orange</item>
        <item name="colorOnPrimary">@color/color_orange</item>
        <!-- Стиль для текстового поля -->
        <item name="editTextStyle">@style/CustomTextInput</item>

        <item name="materialTimePickerStyle">@style/Widget.Material3.MaterialTimePicker</item>
    </style>

    <!-- Стиль для Material Date Picker -->
    <style name="CustomMaterialCalendar" parent="Widget.Material3.MaterialCalendar">
        <!-- Цвет выбранного дня -->
        <item name="daySelectedStyle">@style/CustomCalendarDaySelected</item>
        <!-- Цвет текста дней -->
        <item name="dayStyle">@style/CustomCalendarDay</item>
    </style>

    <!-- Стиль для выбранного дня в календаре -->
    <style name="CustomCalendarDaySelected" parent="Widget.Material3.MaterialCalendar.Day.Selected">
        <item name="itemFillColor">@color/color_orange</item>
        <item name="itemTextColor">@color/color_grey</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- Стиль для текста дней -->
    <style name="CustomCalendarDay" parent="Widget.Material3.MaterialCalendar.Day">
        <item name="itemTextColor">@color/color_grey</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- Стиль для Material Time Picker -->
    <style name="CustomTimePicker" parent="Widget.Material3.MaterialTimePicker.Display">
        <item name="colorPrimary">@color/color_orange</item>
        <item name="android:textColor">@color/color_grey</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="PickerButton" parent="Widget.Material3.Button">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:backgroundTint">@color/color_black</item>
        <item name="strokeColor">@color/color_grey</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:autoSizeMinTextSize">14sp</item>
        <item name="android:autoSizeMaxTextSize">20sp</item>
        <item name="android:autoSizeStepGranularity">2sp</item>
        <item name="rippleColor">@color/color_grey_dark</item>
        <item name="elevation">4dp</item>
    </style>

    <!-- Стиль для текстового поля, адаптированный под темную тему -->
    <style name="CustomTextInput" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/color_grey</item>
        <item name="android:textColor">@color/color_grey</item>
        <item name="hintTextColor">@color/color_orange</item>
        <item name="boxStrokeColor">@color/color_orange</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
    </style>
</resources>